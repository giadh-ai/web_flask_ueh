/************************Hàng 1**************************************/
#header1 {
  width: 100%;
  background-color: #005f69; /* Màu xanh đậm */
  padding: 0px 0;
  display: flex;
  flex-direction: row;

}

#logo
{
    
    
    
}

#menutop {
  background-color: #005f69; 
  width: 80%;
  height: 50px;
  margin: 0 auto; /* căn giữa trong header */
  display: flex; /* dùng flex để bố trí .container bên phải */
  justify-content: flex-end; /* đẩy .container sang phải */
  align-items: center; /* căn giữa theo chiều dọc */
  
}



/* phần container nằm bên phải */
#menutop .container {
 
  /* padding: 10px 20px;
  border-radius: 4px; */
}

#mnu1
{
  display: flex;
  list-style: none;
}
#mnu1 li {
  margin: 0 15px;            /* Khoảng cách giữa các mục */
}

#mnu1 a{
  text-decoration: none;
  color: #fff;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 20px;
}

#mnu1 a:hover {
  background-color: #ffcc80; /* Nền khi hover */
  color: #000;               /* Đổi màu chữ khi hover */
 
}

